<%= form_for @pin, html: { multipart: true } do |f| %>
  <% if @pin.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@pin.errors.count, "error") %> prevented you from making history:</h2>

      <ul>
      <% @pin.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group"><span class="glyphicon glyphicon-camera"></span>
    <%= f.label :Attach_a_photo %>
    <%= f.file_field :image, class: "form-control" %>
  </div>

  <div class="form-group"><span class="glyphicon glyphicon-pencil"></span>
    <%= f.label :Leave_your_comment %><br>
    <%= f.text_field :description, class: "form-control" %>
  </div>

  <div class="form-group">
    <%= f.submit "I was ere", class: "btn btn-primary" %>
  </div>
<% end %>
